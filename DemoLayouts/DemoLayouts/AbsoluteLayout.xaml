<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="DemoLayouts.AbsoluteLayout">
	<AbsoluteLayout BackgroundColor="Yellow">
        <BoxView Color="Aqua" AbsoluteLayout.LayoutBounds="0,0,1,1" 
                              AbsoluteLayout.LayoutFlags="All"/>
        <BoxView Color="White" AbsoluteLayout.LayoutBounds="0.5,0.1,100,100" 
                               AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Button Text="Get started" BackgroundColor="Green"
                TextColor="White"
                AbsoluteLayout.LayoutBounds="0,1,1,50"
                AbsoluteLayout.LayoutFlags="PositionProportional, WidthProportional"/>

        <!--0, 1 == (x,y) x=0 means bottom y=1 right -->

        
    </AbsoluteLayout>
</ContentPage>
