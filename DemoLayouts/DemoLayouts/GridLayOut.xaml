<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DemoLayouts.GridLayOut">
    
	<ContentPage.Content>

        <Grid BackgroundColor="Yellow" RowSpacing="20" ColumnSpacing="20" >
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Text="Label1" BackgroundColor="Green"/>
            <Label Grid.Row="0" Grid.Column="1" Text="Label2" BackgroundColor="Green"/>
            <Label Grid.Row="1" Grid.Column="0" Text="Label3" BackgroundColor="Green"/>
            <Label Grid.Row="1" Grid.Column="1" Text="Label4" BackgroundColor="Green"/>
            <Label Grid.Row="2" Grid.ColumnSpan="2" Text="ColumnSpan" BackgroundColor="Green" />
            <Label Grid.Column="2" Grid.RowSpan="3" Text="RowSpan" BackgroundColor="Green" />
        </Grid>
        
	</ContentPage.Content>
</ContentPage>
